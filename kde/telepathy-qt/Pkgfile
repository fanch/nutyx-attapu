# Depends on: qt, cmake

name=telepathy-qt
version=0.14.1
release=1
source=(http://downloads.sourceforge.net/tapioca-voip/$name-$version.tar.gz)

build() {
	cd $name-$version
	mkdir build
        cd build
        cmake -DCMAKE_INSTALL_PREFIX=/usr ..
 
	make
	make DESTDIR=$PKG install
}
