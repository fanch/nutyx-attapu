# Depends on: kdelibs, kdebase-runtime

name=kdetoys
version=4.4.2
release=1
source=(http://download.kde.org/stable/$version/src/$name-$version.tar.bz2)
build() {
	cd $name-$version
	mkdir build
	cd build
	cmake ../ -DCMAKE_INSTALL_PREFIX=/usr \
	-DBUILD_doc=OFF
	make -j3
	make DESTDIR=$PKG install
}

