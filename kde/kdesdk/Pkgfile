# Description: Diverses applications indispensable pour le di√©veloppement sous KDE4
# URL: http://www.kde.org
# Maintainer: NuTyX packager team
# Packager: lesibel at free dot fr
# Depends on: kdelibs, kdebase-runtime, libxslt, libxml2

name=kdesdk
version=4.4.0
release=1
source=(http://download.kde.org/stable/$version/src/$name-$version.tar.bz2)
build() {
	cd $name-$version
	mkdir build
	cd build
	cmake ../ -DCMAKE_INSTALL_PREFIX=$KDE_PREFIX \
	-DBUILD_doc=OFF
	make -j3
	make DESTDIR=$PKG install
}

