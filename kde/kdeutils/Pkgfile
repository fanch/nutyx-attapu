name=kdeutils
version=4.4.85
release=1
source=(ftp://ftp.kde.org/pub/kde/unstable/$version/src/$name-$version.tar.bz2)

build() {
	cd $name-$version
	mkdir build
	cd build
	cmake ../  -DCMAKE_INSTALL_PREFIX=/usr \
	-DINSTALL_PRINTER_APPLET=TRUE \
	-DBUILD_doc=OFF
	make -j3
	make DESTDIR=$PKG install
}

