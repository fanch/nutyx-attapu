# Description: Programme de base pour KDE4
# URL: http://www.kde.org
# Maintainer: NuTyX packager team
# packager: lesibel at free dot fr
# Depends on: kdelibs-experimental, soprano, polkit-qt, shared-mime-info, oxygen-icons, kdelibs, hal, libvorbis, libogg, audiofile, alsa-utils, xine-lib, samba3, rarian

name=kdebase-runtime
version=4.3.4
release=1
source=(http://download.kde.org/stable/$version/src/$name-$version.tar.bz2)

build() {
	cd $name-$version
	mkdir build
	cd build
	cmake ../ -DCMAKE_INSTALL_PREFIX=$KDE_PREFIX \
	-DCMAKE_BUILD_TYPE=Release \
	-DCMAKE_SKIP_RPATH=ON \
	-DCMAKE_{SHARED,MODULE,EXE}_LINKER_FLAGS='-Wl,--no-undefined -Wl,--as-needed' \
	-DWITH_PulseAudio=OFF \
	-DBUILD_doc=OFF
	make -j3
	make DESTDIR=$PKG install
}

