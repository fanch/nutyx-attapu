# Description: Librairie pour le syst√®me de fichiers virtuel de gnome
# URL: http://library.gnome.org/devel/gnome-vfs-2.0/
# Maintainer: NuTyX core team
# Packager: thierryn1 at hispeed dot ch
# Depends on: gconf, gnome-mime-data

name=gnome-vfs
version=2.24.2
release=1
source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.bz2)
build() {
	cd $name-$version
	./configure --prefix=$GNOME_PREFIX \
            --sysconfdir=/etc \
	--libexecdir=$GNOME_PREFIX/lib/gnome-vfs-2.0
	make
	make DESTDIR=$PKG install
	rm -r $PKG/$GNOME_PREFIX/share/gtk-doc
}
