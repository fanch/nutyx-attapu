name=dvdauthor
version=0.6.14
release=3
source=( http://switch.dl.sourceforge.net/sourceforge/dvdauthor/$name-$version.tar.gz)



build() {
	# build package
		cd $name-$version
                ./configure --prefix=/usr\
                            --mandir=/usr/share/man\
                            --infodir=/usr/share/info
		make
		make DESTDIR=$PKG install
}
