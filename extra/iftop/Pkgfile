name=iftop
version=0.17pre3
release=1
source=(http://www.ex-parrot.com/~pdw/iftop/download/$name-$version.tar.gz)

build() {
	cd $name-$version
        ./configure --prefix=/usr
        make
        make DESTDIR=$PKG install
}


