# Depends on: xorg, libgsf, libpng

name=wv
version=1.2.4
release=1
source=(http://downloads.sourceforge.net/project/wvware/$name/$version/$name-$version.tar.gz)

build() {
	cd $name-$version
	./configure --prefix=/usr --mandir=/usr/share/man
	make
	make DESTDIR=$PKG install
}
