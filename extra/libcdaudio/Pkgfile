name=libcdaudio
version=0.99.12
release=1
source=(http://downloads.sourceforge.net/libcdaudio/$name-${version}p2.tar.gz)

build() {
cd $name-${version}p2
	./configure --prefix=/usr 
	make
	make DESTDIR=$PKG install
}

