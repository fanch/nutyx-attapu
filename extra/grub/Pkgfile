# Description: GRand Unified Bootloader, le programme de chargement du noyau en m√©moire vive
# URL: http://www.gnu.org/software/grub/
# Maintainer: NuTyX core team
# Packager: thierryn1 at hispeed dot ch
# Depends on: freetype

name=grub
version=1.98
release=1
source=(ftp://alpha.gnu.org/gnu/grub/grub-$version.tar.gz\
	grub.cfg)
build() {
	cd grub-$version
	unset CXXFLAGS
	unset CFLAGS
	./configure --prefix=/usr \
                    --mandir=/usr/share/man \
		--sysconfdir=/etc       \
		--disable-grub-emu      \
		--disable-grub-emu-usb  \
		--disable-grub-fstest   \
		--disable-efiemu \
		--infodir=/usr/share/info
	make
	make DESTDIR=$PKG install
        install -d $PKG/boot/grub
        install -d $PKG/usr/share
	if [ -f $PKG/usr/share/info/dir ]; then
        	rm $PKG/usr/share/info/dir
	fi
	install -Dm644 ../grub.cfg \
	$PKG/boot/grub/grub.cfg
}
