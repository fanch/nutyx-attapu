# Depends on: startup-notification, pango, hal
 
name=openbox
version=3.4.11
release=1
source=(http://icculus.org/openbox/releases/$name-$version.tar.gz)
build()
{
cd $name-$version
./configure --prefix=/usr \
        --with-x \
        --enable-startup-notification \
        --sysconfdir=/etc
make
make DESTDIR=$PKG install

} 
