# Description: Codec video MPEG-4
# URL: http://www.xvid.org
# Maintainer: NuTyX core team
# Packager: thierryn1 at hispeed dot ch
# Depends on: nasm

name=xvid
version=1.1.3
release=1
source=(http://kiao.no-ip.info/sources/xvidcore-$version.tar.bz2)


build() {
	cd xvidcore-$version/build/generic
	./configure --prefix=/usr \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info
	make
	make DESTDIR=$PKG install
	chmod -v 755 $PKG/usr/lib/libxvidcore.so.4.1 
	ln -v -sf libxvidcore.so.4.1 $PKG/usr/lib/libxvidcore.so.4
	ln -v -sf libxvidcore.so.4   $PKG/usr/lib/libxvidcore.so
}
