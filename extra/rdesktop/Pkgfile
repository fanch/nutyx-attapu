name=rdesktop
version=1.6.0
release=1
source=(http://downloads.sourceforge.net/$name/$name-$version.tar.gz)

build() {
	cd $name-$version
        ./configure --prefix=/usr
	make
	make DESTDIR=$PKG install

}
