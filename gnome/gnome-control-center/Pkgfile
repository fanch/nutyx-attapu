# Description: Contient le gestionnaire de reglages de gnome
# URL: http://www.gnome.org/
# Maintainer: NuTyX core team
# Packager: thierryn1 at hispeed dot ch
# Depends on: libcanberra, gst-plugins-base, libcanberra, libgnomekbd, gnome-panel, metacity, nautilus, hal, gnome-settings-daemon, evolution-data-server

name=gnome-control-center
version=2.30.0
release=1
source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.bz2)

build() {
	cd $name-$version
	./configure --prefix=$GNOME_PREFIX \
		--sysconfdir=/etc \
		--enable-aboutme \
		--localstatedir=/var/lib \
		--libexecdir=$GNOME_PREFIX/lib/gnome-control-center
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/var
	cd $PKG/$GNOME_PREFIX/share/mime/
	for i in application packages
		do mv $i ../
	done
	
	rm *
	for i in application packages
		do mv ../$i .
	done
	rm $PKG/usr/share/applications/mimeinfo.cache
}
