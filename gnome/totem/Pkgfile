# Description: Le lecteur multim√©dia de GNOME
# URL: http://www.gnome.org/projects/totem/
# Maintainer: NuTyX core team
# Packager: thierryn1 at hispeed dot ch
# Depends on: iso-codes, gst-plugins-good, nautilus, gst-plugins-bad, gst-plugins-ugly, gst-ffmpeg, totem-pl-parser

name=totem
version=2.30.0
release=1
source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.bz2)

build() {
	cd $name-$version
	./configure --prefix=$GNOME_PREFIX \
		--sysconfdir=/etc \
		--libexecdir=$GNOME_PREFIX/lib/$name \
		--disable-schemas-install \
		--enable-gstreamer=yes \
		--enable-browser-plugins \
		--disable-lirc \
		--disable-nvtv \
		--disable-vanity \
		--disable-debug \
		--disable-scrollkeeper
	make
	make DESTDIR=$PKG install
}
