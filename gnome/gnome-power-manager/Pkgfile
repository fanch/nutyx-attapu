# Description: Gestionnaire d'alimentation pour GNOME
# URL: http://www.gnome.org/projects/gnome-power-manager/
# Maintainer: NuTyX core team
# Packager: thierryn1 at hispeed dot ch
# Depends on: dbus, hal, libgnomeui, libglade, libnotify, notification-daemon, gnome-panel, policykit-gnome, libcanberra, devicekit, devicekit-power, libunique

name=gnome-power-manager
version=2.30.0
release=1
source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.bz2)

build() {
	cd $name-$version
	./configure --prefix=$GNOME_PREFIX \
		--libexecdir=$GNOME_PREFIX/lib/$name \
		--sysconfdir=/etc
	make
	make DESTDIR=$PKG install
}
