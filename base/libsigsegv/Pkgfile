name=libsigsegv
version=2.4
release=1
source=(http://ftp.gnu.org/gnu/$name/$name-$version.tar.gz)

build() {
	cd $name-$version
	./configure --prefix=/usr \
		--enable-shared
	make
	make DESTDIR=$PKG install
}
