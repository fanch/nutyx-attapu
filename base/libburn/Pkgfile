name=libburn
version=0.7.4
release=1
source=(http://files.libburnia-project.org/releases/$name-$version.pl00.tar.gz)

build() {
cd $name-$version
	./configure --prefix=/usr \
	--libdir=/usr/lib \
	--mandir=/usr/share/man \
	--localstatedir=/var \
	--sysconfdir=/etc \
	--disable-static
	make
	make DESTDIR=$PKG install
}
