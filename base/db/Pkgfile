name=db
version=4.8.26
release=1
source=(http://download.oracle.com/berkeley-db/$name-$version.tar.gz)

build() {
	cd $name-$version
	cd build_unix
	../dist/configure --prefix=/usr \
		--enable-compat185 \
		--enable-shared \
		--enable-cxx
	make LIBSO_LIBS=-lpthread
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/docs
	chmod -R +w $PKG
	if [ -f $PKG/usr/share/info/dir ]; then
		rm $PKG/usr/share/info/dir
	fi
}
