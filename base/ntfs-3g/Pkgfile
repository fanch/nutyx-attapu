name=ntfs-3g
version=2010.5.16
release=1
source=(http://tuxera.com/opensource/$name-$version.tgz)

build() {
	cd $name-$version
	./configure --prefix=/usr \
	--disable-static \
	--disable-ldconfig
	make
	make DESTDIR=$PKG install
	chmod a-x $PKG/lib/*.so
	rm -rf $PKG/usr/share/doc
}
