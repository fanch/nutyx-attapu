name=psmisc
version=22.11
release=1
source=(http://downloads.sourceforge.net/$name/$name-$version.tar.gz)

build() {
	cd $name-$version
	./configure --prefix=/usr \
	--mandir=/usr/share/man \
	--exec-prefix=""
	make
	make DESTDIR=$PKG install
	mkdir -p $PKG/usr/bin
#	mv /usr/bin/killall /bin
#	ln -sv killall $PKG/bin/pidof
}
