name=xorg-xbacklight
version=1.1
release=1
source=(http://xorg.freedesktop.org/releases/individual/app/xbacklight-$version.tar.bz2)

build() {
	cd xbacklight-$version

	./configure --prefix=/usr

	make
	make DESTDIR=$PKG install
}
