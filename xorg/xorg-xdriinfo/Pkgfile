name=xorg-xdriinfo
version=1.0.2
release=1
source=(http://xorg.freedesktop.org/releases/individual/app/xdriinfo-$version.tar.bz2)

build() {
	cd xdriinfo-$version

	./configure --prefix=/usr

	make
	make DESTDIR=$PKG install
}
