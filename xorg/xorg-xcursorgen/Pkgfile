name=xorg-xcursorgen
version=1.0.3
release=1
source=(http://xorg.freedesktop.org/releases/individual/app/xcursorgen-$version.tar.bz2)

build() {
	cd xcursorgen-$version

	./configure --prefix=/usr

	make
	make DESTDIR=$PKG install
}
